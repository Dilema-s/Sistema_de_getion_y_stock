<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane id="GridPane" alignment="center" hgap="10" vgap="10" prefHeight="400.0" prefWidth="400.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sitemastock.LoginController">
   
    <Text id="texto" text="Bienvenido/a" 
        GridPane.columnIndex="0" GridPane.rowIndex="0"
        GridPane.columnSpan="2"/>

 
    <Label text="Usuario:" 
        GridPane.columnIndex="0" GridPane.rowIndex="1"/>
 
    <TextField fx:id= "usuario" promptText="Ingrese Usuario"  
        GridPane.columnIndex="1" GridPane.rowIndex="1" />
 
    <Label text="Contraseña:" 
        GridPane.columnIndex="0" GridPane.rowIndex="2"/>
 
    <PasswordField fx:id="pass" promptText="Ingrese contraseña" 
        GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    
   
    
    <HBox spacing="10" alignment="bottom_right" 
        GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button   text="Aceptar"  fx:id="bt1"   onAction="#Login" 
        />
    </HBox>

    <Text fx:id="mensaje"
           GridPane.columnIndex="0" GridPane.columnSpan="2"
     GridPane.halignment="RIGHT" GridPane.rowIndex="6"/>

    <stylesheets>
        <URL value="@login.css"/>
    </stylesheets>
</GridPane>
